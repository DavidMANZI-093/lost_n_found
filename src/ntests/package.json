{
  "name": "lost-and-found-ntests",
  "version": "1.0.0",
  "description": "Modern test suite for Lost & Found API",
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:auth": "jest auth",
    "test:admin": "jest admin",
    "test:api": "jest api",
    "test:unit": "jest unit",
    "test:integration": "jest integration",
    "test:visual": "node --experimental-vm-modules node_modules/jest/bin/jest.js --colors",
    "format": "prettier --write \"**/*.{js,json}\"",
    "prepare": "husky install"
  },
  "keywords": ["testing", "api", "security", "jest"],
  "author": "",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "figlet": "^1.6.0",
    "inquirer": "^9.2.15",
    "ora": "^8.0.1",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.9.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "reporters": [
      "default",
      ["jest-html-reporter", {
        "pageTitle": "Test Report",
        "outputPath": "./test-report.html",
        "includeFailureMsg": true
      }],
      ["jest-junit", {
        "outputDirectory": "./junit",
        "outputName": "junit.xml"
      }]
    ],
    "setupFilesAfterEnv": [
      "./testSetup.js"
    ]
  }
}
